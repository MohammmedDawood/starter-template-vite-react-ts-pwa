{
  "name": "starter-template-vite-react-ts-pwa",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Starter kit for modern web applications",
  "homepage": "/",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "dev": "vite --mode development --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "https-preview": "serve build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 && prettier --check .",
    "prettier": "prettier --check \"**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"**/*.{ts,tsx}\"",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "test": "npm run typecheck && npm run prettier && npm run lint && npm run jest && npm run build",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "dependencies": {
    "@mantine/carousel": "^7.1.5",
    "@mantine/code-highlight": "^7.1.5",
    "@mantine/core": "^7.1.5",
    "@mantine/dates": "^7.1.5",
    "@mantine/dropzone": "^7.1.5",
    "@mantine/form": "^7.1.5",
    "@mantine/hooks": "^7.1.5",
    "@mantine/modals": "^7.1.5",
    "@mantine/notifications": "^7.1.5",
    "@mantine/nprogress": "^7.1.5",
    "@mantine/spotlight": "^7.1.5",
    "@mantine/tiptap": "^7.1.5",
    "@reduxjs/toolkit": "^1.9.7",
    "@tabler/icons-react": "^2.39.0",
    "@tiptap/extension-link": "^2.1.12",
    "@tiptap/react": "^2.1.12",
    "@tiptap/starter-kit": "^2.1.12",
    "axios": "^1.6.0",
    "dayjs": "^1.11.10",
    "embla-carousel-react": "^7.1.0",
    "env-cmd": "^10.1.0",
    "localforage": "^1.10.0",
    "notistack": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "https-localhost": "^4.7.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "3.0.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-pwa": "^0.16.5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,scss,md}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "eslint --max-warnings=0"
    ]
  },
  "author": {
    "name": "Mohammed Dawood",
    "email": "mohammed.ahmed.hussein.dawood@gmail.com",
    "url": "https://github.com/MohammmedDawood"
  },
  "keywords": [
    "react",
    "mantine",
    "typescript",
    "vite",
    "prettier",
    "husky",
    "PWA",
    "i18n",
    "redux",
    "starter-kit"
  ]
}
